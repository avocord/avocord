{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"ES2020"
		],
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"removeComments": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitAny": true,
		"moduleResolution": "Node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": false,
		"strictNullChecks": true,
		"declaration": true
	},
	"include": [
		"src",
		"index.d.ts"
	],
	"exclude": [
		"node_modules"
	],
	"typedocOptions": {
		"name": "DisoneJS",
		"out": "./docs",
		"entryPoints": [
			"./src"
		]
	}
}